<%-include( 'partials/header' ) -%>
    <% newPost.forEach((element)=> { %>
        <h1>
            <%=element.title%>
        </h1>

        <%if(element.title==='Home' ){ %>
            <p class="added-post">
                <%=element.content%>
            </p>
            <% }else{%>
                <p class="added-post">
                    <%=element.content.substring(0,100) + ' ...' %> <a href='/posts/<%=element.title%>'>Read More</a>
                </p>
                <% }%>
                    <% }) %>
                        </div>
                        <form action="/compose">
                            <div class="compose">
                                <button class="btn compose-btn" type="submit">
                                    +
                                </button>
                            </div>
                        </form>
                        <%-include( 'partials/footer' ) -%>